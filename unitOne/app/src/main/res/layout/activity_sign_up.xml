<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20px"

    tools:context=".SignUp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hello"
        />

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginVertical="15px"
        android:layout_below="@+id/logo"



        />
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill in this form to create an account!"
        android:layout_below="@+id/head"
        android:layout_marginVertical="15px"
        />
    <TableRow
        android:id="@+id/hr1"
        android:layout_below="@+id/desc"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginVertical="15px"
        android:background="@color/black"
        />
    <EditText
        android:id="@+id/firstName"
        android:layout_width="150dp"

        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_below="@+id/hr1"
        android:inputType="text"
        android:layout_marginVertical="30px"
        />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hr1"
        android:layout_toRightOf="@+id/firstName"
        android:hint="Last Name"
        android:layout_marginLeft="30px"
        android:inputType="text"
        android:layout_marginVertical="30px"
        />

    <EditText
        android:id="@+id/emailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstName"
        android:layout_alignParentLeft="true"
        android:hint="email address"
        android:inputType="textEmailAddress"
        android:layout_marginVertical="15px"
        android:paddingHorizontal="10px"
         />

    <EditText
        android:id="@+id/pasword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailid"
        android:layout_marginVertical="15px"
        android:hint="Password"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15px"
        android:hint="Confirm Password"
        android:id="@+id/confirmPassword"
        android:layout_below="@+id/pasword"
        android:inputType="textPassword"

        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox"
        android:layout_below="@+id/confirmPassword"
        android:checked="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Iagree"
        android:text="I accept the"
        android:layout_toRightOf="@+id/checkbox"
        android:layout_below="@+id/confirmPassword"
        android:layout_margin="15px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/terms"
        android:text="Terms of Use"
        android:textColor="@color/skyBlue"
        android:layout_toRightOf="@+id/Iagree"
        android:layout_below="@+id/confirmPassword"
        android:layout_marginHorizontal="5px"
        android:layout_marginTop="15px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/and"
        android:text="&amp;"
        android:layout_below="@+id/confirmPassword"
        android:layout_toRightOf="@+id/terms"
        android:layout_marginHorizontal="5px"
        android:layout_marginTop="15px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/privacyPolicy"
        android:text="Privacy Policy"
        android:layout_toRightOf="@+id/and"
        android:layout_below="@+id/confirmPassword"
        android:textColor="@color/skyBlue"
        android:layout_marginHorizontal="5px"
        android:layout_marginTop="15px"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SignuUp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:background="@color/skyBlue"
        android:layout_below="@+id/checkbox"
        android:paddingHorizontal="30px"
        android:layout_marginVertical="15px"
        />




</RelativeLayout>