<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app= "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeDetailsFragment"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fl_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/employee_card_layout"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:background="@color/white"
        android:elevation="3dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_toolbar"

            >

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            app:queryHint="Search for people"
            app:searchHintIcon="@drawable/ic_person_search"
            android:background="@drawable/custom_searchview"
            />
        <ImageButton
            android:id="@+id/btn_addEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_person_add"
            android:background="@drawable/custom_add_button"
            android:layout_centerInParent="true"
            android:padding="12dp"

            />
    </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>