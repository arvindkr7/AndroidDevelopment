<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationLandingPage"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/notificationTextViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clicking on Notification will land to this activity page"/>
    <TextView
        android:id="@+id/notificationTextViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some contents goes here"
        android:layout_marginTop="50dp"
        />

</LinearLayout>