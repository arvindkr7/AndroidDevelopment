<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerStatus"
    android:background="@android:color/white"

    >
    <ImageView
        android:id="@+id/registerImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="460dp"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:background="@drawable/bgcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="1dp"
        >
<!--        Successful Text-->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Status!"
            android:textSize="28dp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"

            />
<!--        description text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have been successfully registered."
            android:textSize="16dp"
            android:fontFamily="@font/quicksand_bold"
            android:drawableStart="@drawable/ic_checked_success"

            android:layout_gravity="center"
            android:textColor="#3A3A3A"
            android:layout_marginVertical="5dp"
            android:gravity="center_vertical"


            />
<!--        Horizontal Line -->
        <TableRow android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_backbutton"
            />

<!--        Label for Name -->
        <LinearLayout
            android:id="@+id/lytName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand_regular"
            android:textColor="#3A3A3A"
            android:layout_gravity="start"

            />

<!--        Textbox for Name -->

        <TextView
            android:id="@+id/registerName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_edittext"
            android:paddingLeft="20dp"
            android:text="Your Name"
            android:textColor="#3A3A3A"
            android:textSize="20dp"
            android:fontFamily="@font/quicksand_bold"
            android:drawableStart="@drawable/ic_baseline_person_focused"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:elevation="1dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<!--        Label for E-mail address-->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your E-mail address"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand_regular"
            android:textColor="#3A3A3A"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"


            />
<!--        Textbox for E-mail address-->
        <TextView
            android:id="@+id/registerEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_edittext"
            android:paddingLeft="20dp"
            android:text="Your E-mail address"
            android:textColor="#3A3A3A"
            android:textSize="18dp"
            android:fontFamily="@font/quicksand_bold"
            android:drawableStart="@drawable/ic_email_focused"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:elevation="1dp"
            />
        </LinearLayout>

<!--        Buttons -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            >
            <Button
                android:id="@+id/btnAreYouDone"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Are you done"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:fontFamily="@font/quicksand_bold"
                android:drawableStart="@drawable/ic_baseline_live_help_24"
                android:background="@drawable/bg_capture_button"
                android:paddingLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginRight="3dp"
                android:elevation="3dp"
                />
            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Back"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:fontFamily="@font/quicksand_bold"
                android:drawableEnd="@drawable/ic_baseline_exit_to_app_24"
                android:background="@drawable/bg_browse_button"
                android:paddingRight="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginLeft="3dp"
                android:elevation="3dp"


                />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>